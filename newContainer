# Julian DeVille
# this is just alias-able shorthand for making these Minecraft containers because it's a pain in the ass otherwise
# USAGE: ./newContainer <Minecraft port> <RCON port> <containername> <username> <memory>
sudo useradd -U $4
echo "Added user $4"
sudo mkdir /home/$4/data #this should be done with skel, but I'm doing other stuff with this server
echo "created folder /home/$4/data/"
sudo chown -R $4:$4 /home/$4/data
sudo chcon -Rt svirt_sandbox_file_t /home/$4/data #fixes the permission issue
echo "permissions should be fixed now"
#in the interest of security, this needs to be done manually during script execution
sudo passwd $4
#UID nonsense
USR_UID=$(id -u $4) # assign id of `$4` group to MEDIA_GID
USR_GID=$(id -g $4) # change ownership in podman namespace
#sudo podman unshare chown $MEDIA_UID:$MEDIA_GID /home/$3/data
#make and run the container:
sudo podman run -d -it -v /home/$4/data:/data:z -e TYPE=PAPER -e FORCE_REDOWNLOAD=true -e MAX_RAM=$5G -e UID=$USR_UID -e GID=$USR_GID -p $1:25565 -p $2:25575 -e EULA=true -e ENABLE_RCON=true -e RCON_PASSWORD=ASDF --name $3 -m=$5g --cpus=1 itzg/minecraft-server
#now run it
sudo podman start $3
#output
echo "File ownership bug addressed"
echo "$1, $2, $3, $4, $5" >> MC_CONTAINER_INFO.txt 
echo "$1, $2, $3, $4, $5"
